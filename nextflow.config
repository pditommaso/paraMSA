manifest {
    mainScript = 'paraMSA.nf'
}

profiles {
    crg {
        process {
          executor='crg'
          queue='cn-el7'
          time='4h'
        }
    }
    
    dockerized {
        docker.enabled=true
        process.container='cbcrg/paramsa'
        params.guidanceDir='/guidance.v2.01'
    }
}

env {
    GUIDANCE2DIR="$baseDir/software/guidance.v2.01"
    HHLIB="$baseDir/software/hhsuite-2.0.16-linux-x86_64"
    PERL5LIB="$PERL5LIB:$baseDir/software/hhsuite-2.0.16-linux-x86_64/scripts:$baseDir/perl5lib"
}
